<div id="header">
  <h1>Period Record</h1>
</div>

<div id="links">
  <h3>
    <%= link_to 'New Period', new_period_path, :class => 'link_remote', :remote => true %> |
    <%= link_to 'Edit', edit_period_path(@period), :class => 'link_remote', :remote => true  %> |
    <%= link_to 'Back', periods_path, :class => 'link_remote', :remote => true %>
  </h3>
</div>

<p id="notice"><%= @notice %></p>

<div id="show">
<p>
  <b>Hours:</b>
  <%= @period.hours %>
</p>

<p>
  <b>Quarter:</b>
  <%= @period.quarter %>
</p>

<p>
  <b>Year:</b>
  <%= @period.year %>
</p>

<p>
  <b>Course:</b>
  <%= @period.course.name %>
</p>

  <h3> Students Enrolled </h3>
  <% @period.students.each do |student| %>
    &nbsp;&nbsp;<%= student.name %><br>
  <% end %>

</div>
