<div id="header">
  <h1>Listing Periods</h1>
</div>

<div id="links">
  <h3><%= link_to 'New Period', new_period_path, :class => 'link_remote', :remote => true %></h3>
</div>

<p id="notice"><%= @notice %></p>
<table>
  <tr>
    <th>Course</th>
    <th>Hours</th>
    <th>Quarter</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= period.course.name %></td>
    <td><%= period.hours %></td>
    <td><%= period.quarter %></td>
    <td><%= period.year %></td>
    <td><%= link_to 'Show', period, :class => 'link_remote', :remote => true  %></td>
    <td><%= link_to 'Edit', edit_period_path(period), :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Delete', period, confirm: 'Are you sure?', :method => :delete, :remote => true, :class => 'link_remote_delete' %></td>
  </tr>
<% end %>
</table>

<br />
