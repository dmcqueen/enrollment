<div id="header">
  <h1>Listing Administrators</h1>
</div>

<div id="links">
  <h3><%= link_to 'New Administrator', new_administrator_path, :class => 'link_remote', :remote => true %></h3>
</div>

<p id="notice"><%= @notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @administrators.each do |administrator| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= administrator.name %></td>
    <td><%= link_to 'Show', administrator, :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Edit', edit_administrator_path(administrator), :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Destroy', administrator, confirm: 'Are you sure?', method: :delete, :remote => true, :class => 'link_remote_delete' %></td>
  </tr>
<% end %>
</table>

<br />
