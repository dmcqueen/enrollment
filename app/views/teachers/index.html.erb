<div id="header">
  <h1>Listing Teachers</h1>
</div>

<div id="links">
  <h3><%= link_to 'New Teacher', new_teacher_path, :class => 'link_remote', :remote => true %></h3>
</div>

<p id="notice"><%= @notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr class="<%= cycle("odd","even") %>">
    <td><%= teacher.name %></td>
    <td><%= link_to 'Show', teacher, :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Edit', edit_teacher_path(teacher), :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Destroy', teacher, confirm: 'Are you sure?', method: :delete, :remote => true, :class => 'link_remote_delete' %></td>
  </tr>
<% end %>
</table>

<br />
