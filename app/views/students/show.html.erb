<div id="header">
  <h1>Student Record</h1>
</div>

<div id="links">
  <h3>
    <%= link_to 'New Student', new_student_path, :class => 'link_remote', :remote => true %> |
    <%= link_to 'Edit', edit_student_path(@student), :class => 'link_remote', :remote => true  %> |
    <%= link_to 'Back', students_path, :class => 'link_remote', :remote => true %>
  </h3>
</div>

<p id="notice"><%= @notice %></p>

<div id="show">
<li>
  <b>Name:</b>
  <%= @student.name %>
</li>

<li>
  <b>Email:</b>
  <%= @student.email %>
</li>

<li>
  <b>Phone:</b>
  <%= @student.phone %>
</li>


<li>
  <b>Ssn:</b>
  <%= @student.ssn %>
</li>

  <h3> Enrolled Classes </h3>
  <% @student.periods.each do |period| %>
    <li><strong><%= period.course.name %></strong>: <%= period.year %>, <%= period.quarter %> <%= period.hours %></li>
  <% end %> 
</div>
