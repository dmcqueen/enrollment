<div id="header">
  <h1>Listing Students</h1>
</div>

<div id="links">
  <h3><%= link_to 'New Student', new_student_path, :class => 'link_remote', :remote => true %></h3>
</div>

<p id="notice"><%= @notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= student.name %></td>
    <td><%= link_to 'Show', student, :class => 'link_remote', :remote => true  %></td>
    <td><%= link_to 'Edit', edit_student_path(student), :class => 'link_remote', :remote => true %></td>
    <td><%= link_to 'Delete', student, confirm: 'Are you sure?', :method => :delete, :remote => true, :class => 'link_remote_delete' %></td>
  </tr>
<% end %>
</table>

<br />

